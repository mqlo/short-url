{% extends 'base.html.twig' %}

{% block title %}Url index{% endblock %}

{% block body %}
    <h1>Url index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Value</th>
                <th>Hash</th>
                <th>Clicks</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for url in urls %}
            <tr>
                <td>{{ url.id }}</td>
                <td>{{ url.value }}</td>
                <td>{{ url.hash }}</td>
                <td>{{ url.clicks }}</td>
                <td>
                    <a href="{{ path('url_show', {'id': url.id}) }}">show</a>
                    <a href="{{ path('url_edit', {'id': url.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('url_new') }}">Create new</a>
{% endblock %}
